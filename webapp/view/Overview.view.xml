<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="sap.training.exc.controller.Overview"
core:require="{formatter: 'sap/training/exc/model/formatter'}">
          <Page title="{i18n>overviewPageTitle}">
  <content>
    <Panel headerText="{i18n>customerPanelHeader}" expandable="{= !${device>/system/desktop} }" expanded="{device>/system/desktop}"
    class="sapUiResponsiveMargin sapUiHideOnPhone" width="auto">
      <content>
        <f:SimpleForm layout="ColumnLayout" editable="true">
          <f:toolbar>
            <Toolbar>
              <content>
                <ToolbarSpacer/>
                <Button icon="sap-icon://create" text="{i18n>newCustomerButtonText}" press=".onSave"
                        enabled="{= ${customer>/CustomerName} !== undefined
                        &amp;&amp; ${customer>/CustomerName}.length>0}"/>
              </content>
            </Toolbar>
          </f:toolbar>
          <f:content>
            <core:Title text="{i18n>generalDataFormContainerTitle}"/>
            <Label text="{i18n>formLabelText}"/>
            <Input value="{customer>/Form}"/>
            <Label text="{i18n>nameLabelText}"/>
            <Input value="{customer>/CustomerName}" valueLiveUpdate="true"/>
            <Label text="{i18n>discountLabelText}"/>
            <Input value="{
            path: 'customer>/Discount',
            type: 'sap.ui.model.type.Integer',
            constraints: {minimum: 0, maximum: 100}}"/>
            <core:Title text="{i18n>addressDataFormContainerTitle}"/>
            <Label text="{i18n>streetLabelText}"/>
            <Input value="{customer>/Street}"/>
            <Label text="{i18n>postcodeLabelText}"/>
            <Input value="{customer>/PostCode}"/>
            <Label text="{i18n>cityLabelText}"/>
            <Input value="{customer>/City}"/>
            <Label text="{i18n>countryLabelText}"/>
            <Input value="{customer>/Country}"/>
            <core:Title text="{i18n>contactDataFormContainerTitle}"/>
            <Label text="{i18n>emailLabelText}"/>
            <Input value="{customer>/Email}"/>
            <Label text="{i18n>phoneLabelText}"/>
            <Input value="{customer>/Telephone}"/>
          </f:content>
        </f:SimpleForm>
      </content>
    </Panel>
    <Table id="customerTable" growing="true" growingThreshold="5" 
    mode="SingleSelectLeft" selectionChange=".onCustomerChange"
    class="sap.sapUiResponsiveMargin" width="auto" 
    items="{
      path: '/Customers',
      sorter: [
      {path: 'City', group: true},
      {path: 'CustomerName'} ]}">
    <headerToolbar>
      <Toolbar>
        <Title text="{i18n>customerTableHeader}"/>
        <ToolbarSpacer/>
        <SearchField width="40%" search=".onFilterCustomers"/>
      </Toolbar>
    </headerToolbar>
    <columns>
    <Column><header><Text text="Customer Name"/></header></Column>
    <Column minScreenWidth="Desktop"><header><Text text="Street"/></header></Column>
    <Column minScreenWidth="Desktop"><header><Text text="Post Code"/></header></Column>
    <Column><header><Text text="City"/></header></Column>
    <Column minScreenWidth="Tablet" ><header><Text text="Country"/></header></Column>
    <Column minScreenWidth="Tablet" demandPopin="true"><header><Text text="Email"/></header></Column>
    </columns>
    <items>
    <ColumnListItem>
    <cells>
      <ObjectIdentifier title="{CustomerName}"/>
      <ObjectIdentifier title="{Street}"/>
      <ObjectIdentifier title="{PostCode}"/>
      <ObjectIdentifier title="{City}"/>
      <ObjectIdentifier title="{Country}"/>
      <ObjectIdentifier title="{Email}"/>
    </cells>
    </ColumnListItem>
    </items>
    </Table>
    <Table id="bookingTable" headerText="{i18n>bookingTableHeader}" items="{_Bookings}"
    growing="true" growingThreshold="5" class="sap.sapUiResponsiveMargin">
    <columns>
      <Column ><header><Text text="{i18n>airlineColumnHeader}"/></header></Column>
      <Column ><header><Text text="{i18n>connectionColumnHeader}"/></header></Column>
      <Column ><header><Text text="{i18n>fldateColumnHeader}"/></header></Column>
      <Column minScreenWidth="Desktop" demandPopin="true"><header><Text text="{i18n>classColumnHeader}"/></header></Column>
      <Column minScreenWidth="Tablet" demandPopin="true"><header><Text text="{i18n>paymentColumnHeader}"/></header></Column>
      <Column minScreenWidth="Tablet" demandPopin="true"><header><Text text="{i18n>cancellationColumnHeader}"/></header></Column>
    </columns>
    <items>
    <ColumnListItem >
    <cells>
      <ObjectIdentifier title="{AirlineID}"/>
      <ObjectIdentifier title="{ConnectionNumber}"/>
      <!--
      the flight date is stored as a string, for example "2024-02-27". 
      This is converted to the format "Feb 27, 2024" via the data binding.-->
      <ObjectIdentifier title="{
         path: 'FlightDate',
         type: 'sap.ui.model.type.Date',
         formatOptions: {
         source: {pattern: 'yyyy-MM-dd'},
         style: 'medium'}}"/>
      <Text text="{path: 'Class',
                   formatter: 'formatter.classText'}"/>
      <!--
      For example, currency amounts in Euro (EUR) are displayed with 2 decimals, 
      while amounts in Japanese Yen (JPY) have no decimals.
      -->
      <ObjectNumber
      number="{
       parts: [
       {path: 'ForeignCurrencyPayment'},
       {path: 'ForeignCurrency'}
       ],
       type: 'sap.ui.model.type.Currency',
       formatOptions: {showMeasure: false}}"
       unit="{ForeignCurrency}"/>
    <core:Icon src="{= ${IsCancelled} === 'X' ? 'sap-icon://cancel' : 'sap-icon://accept' }"
          tooltip="{= ${IsCancelled} === 'X' ? '{i18n>cancelledTooltip}' : '{i18n>notCancelledTooltip}' }"/>
    </cells>
    </ColumnListItem>
    </items>
    </Table>
  </content>
</Page>
</mvc:View>